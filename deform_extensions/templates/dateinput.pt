<span tal:omit-tag="">
  <input type='hidden' name="__start__" value="${field.name}:mapping"/>
    <input type="hidden"
           name="date"
           value="${cstruct}"
           id="${field.oid}_altField" />

    <input type="text"
           name="displayDate"
           autocomplete="off"
           value="${cstruct}"
           tal:attributes="size field.widget.size"
           class='form-control ${field.widget.css_class}'
           id="${field.oid}"/>

           <script type="text/javascript">
             deform.addCallback(
                '${field.oid}',
                function(oid) {
                    var js_options = ${options};
                    js_options['altField'] = "#" + oid + "_altField";
                    var date = dateutils.getDateFromIso("${cstruct}", js_options['dateFormat']);
                    $('#' + oid).val(date);
                    $('#' + oid).datepicker(js_options);
                    $('#' + oid).change(function(){
                      if (!$(this).val()) {
                      $("#" + oid + "_altField").val('');
                      }
                    });
                }
             );
    </script>
    <input type="hidden" name="__end__" value="${field.name}:mapping"/>
</span>
